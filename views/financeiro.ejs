<!DOCTYPE html>
<html lang="pt-br">

<%- include('./partials/head') %>

<body>

    <%- include('./partials/header') %>

    <main id="financeiro">
        <input type="checkbox" id="check">
        <label for="check"><span id="icone-sanduiche" class="material-icons">reorder</span></label>
        <aside id="painel">
            <nav>
                <a href="#">
                    <div class="link">Relatorio - 1 <span class="material-icons">
                            pie_chart
                        </span></div>
                </a>
                <a href="#">
                    <div class="link">Relatorio - 2<span class="material-icons">
                            insert_chart
                        </span></div>
                </a>
                <a href="#">
                    <div class="link">Relatorio - 3<span class="material-icons">
                            show_chart
                        </span></div>
                </a>
                <a href="#">
                    <div class="link">Relatorio - 4<span class="material-icons">
                            bubble_chart
                        </span></div>
                </a>
                <a href="#">
                    <div class="link">Relatorio - 5<span class="material-icons">
                            scatter_plot
                        </span></div>
                </a>
            </nav>
        </aside>

        <section id="dash-board">

            <form id="datas" action="">
                <div id="periodo">
                    <div class="input-data">
                        <label for="data-inicial">data inicial</label>
                        <input type="date" id="data-inicial">
                    </div>
                    <div class="input-data">
                        <label for="data-final">data final</label>
                        <input type="date" id="data-final">
                    </div>
                    <div class="input-data">
                        <label id="btn-label" for="data-inicial">.</label>
                        <input type="submit" id="btn-data" value="Buscar">
                    </div>
                </div>

            </form>

            <div id="cards">
                <div class="card-container">
                    <div class="card-main">
                        <div class="card-left">
                            <span class="material-icons">
                                monetization_on
                            </span>
                        </div>
                        <div class="card-dados">
                            <div>Faturamento</div>
                            <div>R$ 20.545,33</div>
                        </div>
                    </div>
                    <div class="card-main">
                        <div class="card-left">
                            <span class="material-icons">
                                local_atm
                            </span>
                        </div>
                        <div class="card-dados">
                            <div>Lucros</div>
                            <div>R$ 99.999.999,99</div>
                        </div>
                    </div>
                    <div class="card-main">
                        <div class="card-left">
                            <span class="material-icons">
                                local_mall
                            </span>
                        </div>
                        <div class="card-dados">
                            <div>Despesas</div>
                            <div>R$ 545,33</div>
                        </div>
                    </div>
                </div>


                <div id="graficos">
                    <div class="grafico-meio">
                        <canvas id="barra"></canvas>
                    </div>
                    <div class="grafico-meio">
                        <canvas id="pizza-despesa"></canvas>
                    </div>
                    <div class="grafico-meio">
                        <div id="donutchart" style="width: 100%; height:100%;"></div>
                    </div>
                    <!-- **********************************************
                    Gráfico misto***********************************-->
                    <div class="grafico-meio">
                        <canvas id="bar-line"></canvas>
                    </div>
                    <div class="grafico-baixo">
                        <canvas id="linha"></canvas>
                    </div>
                </div>
            </div>

        </section>

    </main>

    <%- include('./partials/footer') %>
    <%= dataFinanceiro[0].data %>

    <%- include('./partials/scripts') %>
    
    <!-- Importa o objeto dataFinanceiro de forma que os scripts seguintes consigam utilizá-lo -->
    <script>
        var dbData = <%- JSON.stringify(dataFinanceiro) %>;
    </script>
    
    <script>
        var ctx = document.getElementById('barra').getContext('2d');
                
        var myChart = new Chart(ctx, {
            type: 'horizontalBar',
            data: {
                labels: dbData[0].labels,
                datasets: [{
                    label:'Receita x Despesas',
                    data: dbData[0].data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                        
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>

        <script>
            var ctx = document.getElementById('pizza-despesa').getContext('2d');
            var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: dbData[1].labels,
                datasets: [{
                    
                    data: dbData[1].data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(154, 62, 255, 0.2)',
                        'rgba(100, 206, 86, 0.2)'
                        
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(154, 62, 255, 1)',
                        'rgba(100, 206, 86, 1)',
                        
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                
            }
        });
        </script>

        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
          google.charts.load("current", {packages:["corechart"]});
          google.charts.setOnLoadCallback(drawChart);
          function drawChart() {
            var data = google.visualization.arrayToDataTable([
              ['Task', 'Hours per Day'],
              ['Work',     11],
              ['Eat',      2],
              ['Commute',  2],
              ['Watch TV', 2],
              ['Sleep',    7]
            ]);
        
            var options = {
              title: 'My Daily Activities',
              pieHole: 0.4,
            };
        
            var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
            chart.draw(data, options);
          }
        </script>
        
        <!-- *********************************************************************
        Gráfico de barras com linhas****************************************** -->
        
        <script>
            var ctx = document.getElementById('bar-line').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    datasets: [{
                        label: 'Gráfico de barras',
                        data: dbData[2].data
                    },
                {
                    label: 'Gráfico de linha',
                    data: dbData[3].data,
                    type: 'line'
                }],
                labels: dbData[2].labels
                } 
            });
            </script>
</body>

</html>