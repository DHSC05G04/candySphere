<!DOCTYPE html>
<html lang="pt-br">

    <%- include('../partials/head') %>

    <body>

        <%- include('../partials/header') %>

        <main id="administracao">
            <% receitas.forEach(receita => { %>
                <a href=<%= `/admin/receitas/${receita.id}` %> class="adminCardContainer">
                    <section class="foto" style="background-image: url(<%= receita.foto %>); background-size: cover;">
                    </section>
                    <section class="description">
                        <h3><%= receita.fabricado.nome %></h3>
                        <p><%= receita.descricao %></p>
                    </section>
                </a>                                
            <% }); %>
        </main>

        <%- include('../partials/footer') %>

        <%- include('../partials/scripts') %>

    </body>

</html>